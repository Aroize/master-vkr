<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SecondaryButton" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_primary_white</item>
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/primary_button_bg</item>
        <item name="backgroundTint">@color/color_secondary</item>
    </style>

    <style name="PrimaryButton" parent="@style/SecondaryButton">
        <item name="backgroundTint">@color/color_primary</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>
    <style name="SubHeaderText" parent="TextAppearance.AppCompat">
        <item name="color">@color/color_black</item>
    </style>

    <style name="ClientMonthView">
        <item name="titlePaddingTop">8dp</item>
        <item name="titlePaddingStart">16dp</item>
        <item name="titlePaddingBottom">8dp</item>
        <item name="selectedBorderInset">5dp</item>
        <item name="selectedBorderRadius">4dp</item>
        <item name="titleTextSize">14sp</item>
        <item name="dayTextSize">15sp</item>
        <item name="titleTextColor">#8D949E</item>
        <item name="dayTextColor">@color/black</item>
        <item name="selectedDayBgColor">@color/color_primary</item>
        <item name="selectedTextColor">@color/white</item>
        <item name="disabledDayTextColor">#C0C4C9</item>
    </style>

    <attr name="titlePaddingStart" format="dimension"/>
    <attr name="titlePaddingTop" format="dimension"/>
    <attr name="titlePaddingBottom" format="dimension"/>
    <attr name="selectedBorderRadius" format="dimension"/>
    <attr name="selectedBorderInset" format="dimension"/>

    <attr name="titleFont" format="reference"/>
    <attr name="dayFont" format="reference"/>

    <attr name="titleTextSize" format="dimension"/>
    <attr name="dayTextSize" format="dimension"/>

    <attr name="titleTextColor" format="color"/>
    <attr name="dayTextColor" format="color"/>
    <attr name="disabledDayTextColor" format="color"/>
    <attr name="selectedDayBgColor" format="color"/>
    <attr name="selectedTextColor" format="color"/>

    <declare-styleable name="BottomNavItem">
        <attr name="android:src"/>
        <attr name="android:text"/>
    </declare-styleable>

    <declare-styleable name="MonthView">
        <attr name="titlePaddingStart"/>
        <attr name="titlePaddingTop"/>
        <attr name="titlePaddingBottom"/>
        <attr name="titleTextSize"/>
        <attr name="dayTextSize"/>
        <attr name="titleTextColor"/>
        <attr name="dayTextColor"/>
        <attr name="selectedDayBgColor"/>
        <attr name="selectedTextColor"/>
        <attr name="selectedBorderRadius"/>
        <attr name="selectedBorderInset"/>
        <attr name="disabledDayTextColor"/>
        <attr name="titleFont"/>
        <attr name="dayFont"/>
    </declare-styleable>
</resources>